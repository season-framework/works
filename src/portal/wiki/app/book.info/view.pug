div(class="overflow-auto h-full", *ngIf="loaded")
    div(class="flex flex-col bg-white rounded-lg border border-neutral-200 w-full mx-auto divide-y divide-neutral-200 text-sm max-w-[30rem]")
        div(class="py-4 px-5")
            label(class="block mb-2 text-sm font-medium text-neutral-600") 위키 제목
            input(class="w-full px-3 py-2 text-sm border border-neutral-200 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-400 placeholder-neutral-400 transition-colors", placeholder="새 위키", [(ngModel)]="wikibook.data().title", [disabled]="readOnly")

        div(class="py-4 px-5")
            label(class="block mb-2 text-sm font-medium text-neutral-600") Namespace
            input(class="w-full px-3 py-2 text-sm border border-neutral-200 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-400 placeholder-neutral-400 transition-colors", placeholder="mybook", [(ngModel)]="wikibook.data().namespace", [disabled]="readOnly")

        div(class="py-4 px-5")
            label(class="block mb-2 text-sm font-medium text-neutral-600") 공개범위
            div(class="flex gap-x-2 text-sm")
                label(class="cursor-pointer")
                    input(type="radio", name="book-visibility", value="private", class="sr-only peer", [(ngModel)]="wikibook.data().visibility", [disabled]="readOnly")
                    span(class="inline-flex items-center gap-1 px-3 py-1.5 rounded-md border border-neutral-200 text-neutral-500 transition-all peer-checked:border-blue-400 peer-checked:bg-blue-50 peer-checked:text-blue-600 hover:bg-neutral-50")
                        i(class="ti ti-lock text-sm")
                        span 비공개

                label(class="cursor-pointer", *ngIf="service.auth.show.membership(['admin', 'staff'])")
                    input(type="radio", name="book-visibility", value="internal", class="sr-only peer", [(ngModel)]="wikibook.data().visibility", [disabled]="readOnly")
                    span(class="inline-flex items-center gap-1 px-3 py-1.5 rounded-md border border-neutral-200 text-neutral-500 transition-all peer-checked:border-blue-400 peer-checked:bg-blue-50 peer-checked:text-blue-600 hover:bg-neutral-50")
                        i(class="ti ti-users text-sm")
                        span 내부공개

                label(class="cursor-pointer")
                    input(type="radio", name="book-visibility", value="public", class="sr-only peer", [(ngModel)]="wikibook.data().visibility", [disabled]="readOnly")
                    span(class="inline-flex items-center gap-1 px-3 py-1.5 rounded-md border border-neutral-200 text-neutral-500 transition-all peer-checked:border-blue-400 peer-checked:bg-blue-50 peer-checked:text-blue-600 hover:bg-neutral-50")
                        i(class="ti ti-lock-open text-sm")
                        span 전체공개

        div(class="py-4 px-5")
            label(class="block mb-2 text-sm font-medium text-neutral-600") 설명
            textarea(class="w-full px-3 py-2 text-sm border border-neutral-200 rounded-md resize-none focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-400 placeholder-neutral-400 transition-colors", placeholder="위키 설명을 입력해주세요", [(ngModel)]="wikibook.data().description", [disabled]="readOnly", rows=5)

        div(class="flex py-4 px-5", *ngIf="wikibook.data().id")
            div(class="ml-auto")
            button(class="px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-md hover:bg-blue-600 transition-colors", (click)="update()") 저장하기
