div(class="relative z-[99999]", *ngIf="model.isshow")
    div(class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity")
    div(class="fixed inset-0 z-50 w-screen overflow-y-auto")
        div(class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0")
            div(class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:max-w-lg sm:p-6 min-w-96")
                div(class="absolute top-0 right-0 w-8 h-8 flex items-center justify-center text-gray-500 hover:text-gray-900 text-xl cursor-pointer hover:scale-125 transition-all", (click)="model.hide()")
                    i.fa-solid.fa-xmark
                div(class="sm:flex sm:items-start")
                    div(
                        class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full sm:mx-0 sm:h-10 sm:w-10",
                        [class.bg-yellow-100]="model.opts.status == 'warning'",
                        [class.bg-blue-100]="model.opts.status == 'success'",
                        [class.bg-red-100]="model.opts.status == 'error'")
                        
                        svg(*ngIf="model.opts.status == 'error'", class="h-6 w-6 text-red-600", fill="none", viewBox="0 0 24 24", stroke-width="1.5", stroke="currentColor", aria-hidden="true")
                            path(stroke-linecap="round", stroke-linejoin="round", d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z")
                        
                        svg(*ngIf="model.opts.status == 'warning'", class="h-6 w-6 text-yellow-600", fill="none", viewBox="0 0 24 24", stroke-width="1.5", stroke="currentColor", aria-hidden="true")
                            path(stroke-linecap="round", stroke-linejoin="round", d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z")
                        
                        svg(*ngIf="model.opts.status == 'success'", class="h-6 w-6 text-blue-600", fill="none", viewBox="0 0 24 24", stroke-width="1.5", stroke="currentColor", aria-hidden="true")
                                path(stroke-linecap="round", stroke-linejoin="round", d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z")

                    div(class="mt-2 sm:ml-4 sm:mt-0 sm:text-left")
                        h3(class="text-base font-semibold leading-6 text-gray-900") {{model.opts.title}}
                        div(class="mt-2")
                            p(class="text-sm text-gray-500", style="white-space: pre-line") {{ model.opts.message }}
                
                div(class="sm:mt-4 sm:flex sm:flex-row-reverse mt-3")
                    button(
                        [class]="btnColorClass()",
                        *ngIf="model.opts.action",
                        (click)="model.action()") {{model.opts.action}}
                    button(
                        (click)="model.hide()", 
                        type="button", 
                        *ngIf="model.opts.cancel",
                        class="inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto") {{model.opts.cancel}}
